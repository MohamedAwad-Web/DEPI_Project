@model IEnumerable<Bookify.Core.Models.Room>

@{
    ViewData["Title"] = "Welcome to Bookify Hotels";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold text-primary">Find Your Perfect Stay</h1>
            <p class="lead">Discover luxury accommodations with unbeatable comfort and service.</p>
            <a href="#rooms" class="btn btn-primary btn-lg">Browse Rooms</a>
        </div>
        <div class="col-lg-6">
            <div class="room-image rounded">
                <i class="bi bi-building"></i>
            </div>
        </div>
    </div>

    <!-- Rooms Section -->
    <div id="rooms" class="row">
        <div class="col-12">
            <h2 class="mb-4">Available Rooms</h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h4>No rooms available at the moment.</h4>
                    <p class="mb-0">Please check back later or contact our reception.</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var room in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card room-card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title">Room @room.RoomNumber</h5>
                                        <span class="badge @(room.IsAvailable ? "bg-success" : "bg-danger")">
                                            @(room.IsAvailable ? "Available" : "Occupied")
                                        </span>
                                    </div>

                                    <h6 class="text-muted mb-3">@room.RoomType?.Name</h6>

                                    <p class="card-text text-muted small mb-3">
                                        <i class="bi bi-person"></i> Up to @room.RoomType?.MaxGuests guests<br>
                                        @room.RoomType?.Description
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <div class="price-tag">$@room.RoomType?.Price<span class="text-muted small">/night</span></div>
                                        @if (room.IsAvailable)
                                        {
                                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-primary">
                                                <i class="bi bi-calendar-plus"></i> Book Now
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary" disabled>
                                                <i class="bi bi-calendar-x"></i> Not Available
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>