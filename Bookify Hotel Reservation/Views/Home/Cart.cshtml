else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Reservation Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Room Information</h6>
                            <p class="mb-1"><strong>Room:</strong> @Model.RoomNumber - @Model.RoomType</p>
                            <p class="mb-1"><strong>Price per night:</strong> $@Model.PricePerNight</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Stay Details</h6>
                            <p class="mb-1"><strong>Check-in:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Check-out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
                            <p class="mb-0"><strong>Nights:</strong> @Model.NumberOfNights</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-credit-card"></i> Payment Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>@Model.NumberOfNights nights × $@Model.PricePerNight</span>
                        <span>$@(Model.PricePerNight * Model.NumberOfNights)</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-success">$@Model.TotalPrice</strong>
                    </div>

                <div class="d-grid gap-3">
                    <form asp-controller="Booking" asp-action="Checkout" method="post">
                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-credit-card"></i> Proceed to Payment
                        </button>
                    </form>

                    <div class="row g-2">
                        <div class="col-6">
                            <form method="post" asp-action="ClearCart">
                                <button type="submit" class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                            </form>
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-plus-circle"></i> Add Another Room
                            </a>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
}