@model Bookify.Core.Models.ReservationCart

@{
    ViewData["Title"] = "Reservation Cart";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Cart</li>
        </ol>
    </nav>

    <h2 class="mb-4">Your Reservation Cart</h2>

    @if (Model == null)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
                <h3 class="text-muted">Your cart is empty</h3>
                <p class="text-muted mb-4">Browse our available rooms to start your reservation.</p>
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Browse Rooms
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Reservation Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Room Information</h6>
                                <p class="mb-1"><strong>Room:</strong> @Model.RoomNumber - @Model.RoomType</p>
                                <p class="mb-1"><strong>Price per night:</strong> $@Model.PricePerNight</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Stay Details</h6>
                                <p class="mb-1"><strong>Check-in:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-1"><strong>Check-out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-0"><strong>Nights:</strong> @Model.NumberOfNights</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-credit-card"></i> Payment Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>@Model.NumberOfNights nights × $@Model.PricePerNight</span>
                            <span>$@(Model.PricePerNight * Model.NumberOfNights)</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-success">$@Model.TotalPrice</strong>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="#" class="btn btn-success btn-lg">
                                <i class="bi bi-credit-card"></i> Proceed to Checkout
                            </a>
                            <form method="post" asp-action="ClearCart">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-trash"></i> Clear Cart
                                </button>
                            </form>
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>