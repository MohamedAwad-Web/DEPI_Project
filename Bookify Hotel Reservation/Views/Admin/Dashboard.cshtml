@model Bookify.Core.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Admin Dashboard</h1>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Total Rooms</h5>
                            <h2>@Model.TotalRooms</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-door-open fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Available Rooms</h5>
                            <h2>@Model.AvailableRooms</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-bed fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Total Bookings</h5>
                            <h2>@Model.TotalBookings</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Occupancy Rate</h5>
                            <h2>@(Model.TotalRooms > 0 ? ((Model.TotalRooms - Model.AvailableRooms) * 100 / Model.TotalRooms) : 0)%</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Rooms & Bookings -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Rooms</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentRooms.Any())
                    {
                        <div class="list-group">
                            @foreach (var room in Model.RecentRooms)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Room @room.RoomNumber</h6>
                                        <span class="badge @(room.IsAvailable ? "bg-success" : "bg-danger")">
                                            @(room.IsAvailable ? "Available" : "Occupied")
                                        </span>
                                    </div>
                                    <p class="mb-1">@room.RoomType?.Name - $@room.RoomType?.Price/night</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No rooms found.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Bookings</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBookings.Any())
                    {
                        <div class="list-group">
                            @foreach (var booking in Model.RecentBookings)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Booking #@booking.Id</h6>
                                        <span class="badge bg-info">@booking.Status</span>
                                    </div>
                                    <p class="mb-1">Room @booking.Room?.RoomNumber - $@booking.TotalCost</p>
                                    <small>@booking.CheckInDate.ToString("MMM dd") - @booking.CheckOutDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No bookings found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-action="Rooms" class="btn btn-outline-primary">Manage Rooms</a>
                        <a asp-action="Bookings" class="btn btn-outline-primary">View Bookings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>