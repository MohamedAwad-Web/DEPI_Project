@model IEnumerable<Bookify.Core.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Manage Bookings</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Room</th>
                    <th>Guest</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>#@booking.Id</td>
                        <td>@booking.Room?.RoomNumber</td>
                        <td>@booking.User?.Email</td>
                        <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                        <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                        <td>$@booking.TotalCost</td>
                        <td>
                            <span class="badge bg-info">@booking.Status</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="#" class="btn btn-outline-primary">View</a>
                                <a href="#" class="btn btn-outline-warning">Update</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>