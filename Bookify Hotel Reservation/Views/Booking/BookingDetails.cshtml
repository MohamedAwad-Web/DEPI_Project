@model Bookify.Core.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="MyBookings">My Bookings</a></li>
            <li class="breadcrumb-item active">Booking #@Model.Id</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Booking Details #@Model.Id</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Room Information</h5>
                    <p><strong>Room Number:</strong> @(Model.Room?.RoomNumber ?? "Unknown")</p>
                    <p><strong>Room Type:</strong> @(Model.Room?.RoomType?.Name ?? "Unknown")</p>
                    <p><strong>Max Guests:</strong> @(Model.Room?.RoomType?.MaxGuests ?? 0)</p>
                </div>
                <div class="col-md-6">
                    <h5>Booking Information</h5>
                    <p><strong>Check-in:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Check-out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Nights:</strong> @Model.NumberOfNights</p>
                    <p><strong>Total Cost:</strong> $@Model.TotalCost</p>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Guest Information</h5>
                    <p><strong>Name:</strong> @Model.GuestName</p>
                    <p><strong>Email:</strong> @Model.GuestEmail</p>
                </div>
                <div class="col-md-6">
                    <h5>Booking Status</h5>
                    <p>
                        <strong>Status:</strong>
                        <span class="badge @(Model.Status == "Confirmed" ? "bg-success" : Model.Status == "Pending" ? "bg-warning" : "bg-danger")">
                            @Model.Status
                        </span>
                    </p>
                    <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("MMM dd, yyyy")</p>
                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="MyBookings" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to My Bookings
        </a>
    </div>
</div>