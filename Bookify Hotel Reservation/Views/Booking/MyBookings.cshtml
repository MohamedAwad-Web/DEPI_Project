@model IEnumerable<Bookify.Core.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h2 class="mb-4">My Bookings</h2>

    @if (!Model.Any())
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
                <h3 class="text-muted">No Bookings Yet</h3>
                <p class="text-muted mb-4">You haven't made any bookings yet.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-search"></i> Browse Rooms
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title">Booking #@booking.Id</h5>
                                <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : booking.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                    @booking.Status
                                </span>
                            </div>

                            <p class="card-text">
                                <strong>Room:</strong> @(booking.Room?.RoomNumber ?? "Unknown") - @(booking.Room?.RoomType?.Name ?? "Unknown")<br>
                                <strong>Dates:</strong> @booking.CheckInDate.ToString("MMM dd") - @booking.CheckOutDate.ToString("MMM dd, yyyy")<br>
                                <strong>Nights:</strong> @booking.NumberOfNights<br>
                                <strong>Total:</strong> $@booking.TotalCost
                            </p>

                            <div class="d-grid gap-2">
                                <a asp-action="BookingDetails" asp-route-id="@booking.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                            @if (booking.Status == "Confirmed" && booking.CheckInDate > DateTime.Today)
                            {
                                <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100 mt-2">
                                        <i class="bi bi-x-circle"></i> Cancel Booking
                                    </button>
                                </form>
                            }
                        </div>
                        <div class="card-footer text-muted">
                            Booked on @booking.BookingDate.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>