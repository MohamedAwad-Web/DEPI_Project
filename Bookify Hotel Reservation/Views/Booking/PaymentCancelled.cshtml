@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0"><i class="bi bi-x-circle-fill"></i> Payment Cancelled</h2>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-credit-card text-warning display-1"></i>
                    <h3 class="text-warning mt-3">Payment Not Completed</h3>
                    <p class="lead">Your booking was not confirmed because the payment process was cancelled.</p>

                    <p>No charges have been made to your account.</p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Back to Home
                        </a>
                        <a asp-controller="Home" asp-action="Cart" class="btn btn-outline-primary">
                            <i class="bi bi-cart"></i> Back to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>