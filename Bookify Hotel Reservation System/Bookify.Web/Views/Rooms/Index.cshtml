@model IEnumerable<Bookify.Data.Entities.Room>
@{
    ViewData["Title"] = "Rooms";
}
<h2>Search Rooms</h2>
<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Check In</label>
        <input type="date" name="checkIn" class="form-control" value="@((DateTime?)ViewBag.CheckIn)?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Check Out</label>
        <input type="date" name="checkOut" class="form-control" value="@((DateTime?)ViewBag.CheckOut)?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Room Type</label>
        <select name="roomTypeId" class="form-select">
            <option value="">Any</option>
            @foreach (var rt in (IEnumerable<Bookify.Data.Entities.RoomType>)ViewBag.RoomTypes){
                <option value="@rt.Id">@rt.Name (@rt.Capacity) - @rt.BasePricePerNight</option>
            }
        </select>
    </div>
    <div class="col-md-3 align-self-end">
        <button class="btn btn-primary">Search</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
@foreach(var r in Model){
    <div class="col">
        <div class="card h-100 shadow-sm">
            <img src="@r.RoomType?.ImageUrl" class="card-img-top" alt="@r.RoomType?.Name" />
            <div class="card-body">
                <h5 class="card-title">@r.RoomType?.Name â€” Room @r.Number</h5>
                <p class="card-text text-muted">@r.RoomType?.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">@String.Format("{0:C}", r.RoomType?.BasePricePerNight)/night</span>
                    <span class="badge bg-secondary">Sleeps @r.RoomType?.Capacity</span>
                </div>
                @if (!string.IsNullOrWhiteSpace(r.RoomType?.Amenities)){
                    <div class="mt-2">
                        @foreach (var a in r.RoomType!.Amenities!.Split(',', StringSplitOptions.RemoveEmptyEntries)){
                            <span class="badge bg-dark border">@a.Trim()</span>
                        }
                    </div>
                }
            </div>
            <div class="card-footer bg-white border-0">
                <form asp-controller="Booking" asp-action="AddToCart" method="post" class="d-flex gap-2">
                    <input type="hidden" name="roomId" value="@r.Id" />
                    <input type="hidden" name="checkIn" value="@((DateTime?)ViewBag.CheckIn)?.ToString("yyyy-MM-dd")" />
                    <input type="hidden" name="checkOut" value="@((DateTime?)ViewBag.CheckOut)?.ToString("yyyy-MM-dd")" />
                    <button class="btn btn-success flex-fill">Reserve</button>
                </form>
            </div>
        </div>
    </div>
}
</div>