@model Bookify.Data.Entities.RoomType
@{
    ViewData["Title"] = "Create Room Type";
}
<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Base Price/Night</label>
        <input class="form-control" asp-for="BasePricePerNight" />
    </div>
    <div class="mb-3">
        <label class="form-label">Capacity</label>
        <input class="form-control" asp-for="Capacity" />
    </div>
    <button class="btn btn-success">Save</button>
</form>